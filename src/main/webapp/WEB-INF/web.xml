<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>Optional Courses</display-name>
    <description>Optional courses from best EPAM training centre</description>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.epam.lab.optional_courses.controller.MainController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.epam.lab.optional_courses.controller.UserController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.epam.lab.optional_courses.controller.AuthController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>com.epam.lab.optional_courses.controller.CourseController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.epam.lab.optional_courses.controller.RegistrationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/course/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register/*</url-pattern>
    </servlet-mapping>

</web-app>